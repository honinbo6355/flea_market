        <script type="text/javascript">
			/* 카테고리 리스트 생성 */
			
			var category = {
				init : function() {
					var jsonCategoryArray = JSON.parse('<c:out value="${JSON_CATEGORY_ARRAY}" escapeXml="false" />');
					var categoryList = $('.category-menu-list');
					
					var categoryUl = document.createElement("ul");
					
					for (var i=0; i<jsonCategoryArray.length; i++) {
						if (jsonCategoryArray[i].cateLevel === 1) {
							$(categoryUl).append("<li><a href='categoryMain.do?categoryId=" 
							+ jsonCategoryArray[i].cateCode + "'>" 
							+ jsonCategoryArray[i].cateName + "<i class='zmdi zmdi-chevron-right'></i></a></li>");
						}
					}
					
					categoryList.append(categoryUl);	
				}	
			}
			
			category.init();
			
		</script>